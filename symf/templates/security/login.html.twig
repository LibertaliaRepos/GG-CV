{% extends 'base.html.twig' %}

{% block title %} Accueil {{ parent() }} {% endblock %}


{% block contentBody %}
  <article id="content">
    <h1>Connexion</h1>
    <div id="login">
        
      
        <form id="loginForm" method="post">
          {% if error %}
              <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
          {% endif %}

          
          <label>
            Username
            <input type="text" value="{{ last_username }}" class="form-control" name="username" id="inputUsername" placeholder="Username" required autofocus>
          </label>
          
          <label>Password
            <input type="password" name="password" id="inputPassword" placeholder="Password" required>
          </label>
          <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
          
          <button class="button success" type="submit">Sign in</button>
          
      </form>
      
    </div>
  </article>
{% endblock %}