{% extends 'new_base.html.twig' %}

{% block title %} Compétances {% endblock %}

{% block content %}
    <header id="contentHead">

        <h1>Compétances</h1>

        <nav id="pageMenu">
            {{ include('menu/pageMenu.html.twig', { 'skillImages': skillImages }) }}
        </nav>

    </header>

    <div id="explanationList">
        {% for skillImage in skillImages %}

            {% if loop.first %}
                {% set active = true %}
            {% else %}
                {% set active = false %}
            {% endif %}


            {{ include('skill/skill.html.twig', { 'skillImage': skillImage, 'active': active }) }}
        {% endfor %}
    </div>
{% endblock %}

